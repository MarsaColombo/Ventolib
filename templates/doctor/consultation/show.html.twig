    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ consultation.id }}</td>
            </tr>
            <tr>
                <th>Last_date</th>
                <td>{{ consultation.lastDate ? consultation.lastDate|date('Y-m-d') : '' }}</td>
            </tr>
