{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Species</th>
                <th>Race</th>
                <th>Colour</th>
                <th>Gender</th>
                <th>Weight</th>
                <th>Sterilize</th>
                <th>TattooNumber</th>
                <th>ChipNumber</th>
                <th>Picture</th>
                <th>BirthDate</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.species }}</td>
                <td>{{ animal.race }}</td>
                <td>{{ animal.colour }}</td>
                <td>{{ animal.gender }}</td>
                <td>{{ animal.weight }}</td>
                <td>{{ animal.sterilize ? 'Yes' : 'No' }}</td>
                <td>{{ animal.tattooNumber }}</td>
                <td>{{ animal.chipNumber }}</td>
                <td>{{ animal.picture }}</td>
                <td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ animal.createdAt ? animal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
{% endblock %}
