{% extends 'base.html.twig' %}

{% block title %}Medication{% endblock %}

{% block body %}
    <h1>Medication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medication.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medication.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ medication.date }}</td>
            </tr>
            <tr>
                <th>NextReminder</th>
                <td>{{ medication.nextReminder }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ medication.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ medication.createdAt ? medication.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_medication_index') }}">back to list</a>

    <a href="{{ path('app_medication_edit', {'id': medication.id}) }}">edit</a>

    {{ include('medication/_delete_form.html.twig') }}
{% endblock %}
