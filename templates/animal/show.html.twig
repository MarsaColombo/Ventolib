{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ animal.species }}</td>
            </tr>
            <tr>
                <th>Race</th>
                <td>{{ animal.race }}</td>
            </tr>
            <tr>
                <th>Colour</th>
                <td>{{ animal.colour }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ animal.gender }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ animal.weight }}</td>
            </tr>
            <tr>
                <th>Sterilize</th>
                <td>{{ animal.sterilize ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TattooNumber</th>
                <td>{{ animal.tattooNumber }}</td>
            </tr>
            <tr>
                <th>ChipNumber</th>
                <td>{{ animal.chipNumber }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ animal.picture }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ animal.createdAt ? animal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
